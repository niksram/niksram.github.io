---
const { title, subtitle, subtitle2, subtitle3, subtitleMain, image } = Astro.props;
import { Image } from "astro:assets";
---

<div class="flex">
  
  <div class="education__time">
    <span class="w-4 h-4 bg-primary block rounded-full mt-1"></span>
    <span class="education__line bg-primary block h-full w-[2px] translate-x-[7px]"></span>
  </div>
  <div class="experience__data bd-grid px-5">
    {image && <Image
      src={image}
      width={100}
      height={50}
      alt={title}
      class="max-w-full md:max-w-[13rem] rounded-lg"
    />}
    {title && <h3 class="font-semibold mb-1">{title}</h3>}
    <span class="font-semibold text-sm">{subtitleMain}</span>
    <br>
    <span class="font-light text-sm">{subtitle}</span>
    <p class="my-2 text-justify">
      <slot />
    </p>
  </div>
</div>
